.divLine{
  background: #E0E3DA;
    width: 100%;
    position: relative;
    top: 15rpx;
    display: block;
    margin: 0px auto 25px;
    width: 100%;
    height: 0.1px;
    /* border-radius: 12px/1px; */
    box-shadow: 0px 3px 9px #ffffff;
}



.box {
  position: absolute;
  top:50%;
  width:90% ;
  height: 12%;
  left: 60rpx;
  display: flex;
  flex-direction: column;
  justify-content:center;
  flex-wrap: nowrap;
  margin: 10px 5px 5px 0px;
  border-radius: 25rpx;
}
.boxitem {
  width: 100%;
  height: 100%;
  margin: 25rpx;
 
  border-radius: 25rpx;
 
 
}

.boxitem_top {
  width: 100%;
  height: 50%;
  margin: 0 auto;
  display: flex;
  justify-content: center;
  align-items: center;
}

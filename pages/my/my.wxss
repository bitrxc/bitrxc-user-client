/* pages/my/my.wxss */
page {
  background-image: url(https://wx3.sinaimg.cn/mw690/006cV2kkgy1gcz9iabu19j30yi22oabf.jpg);
  background-size: cover;
}
.container{
  height: 30%;
  margin: 10%;
  padding: 0px;
  position: top left;
  align-items: flex-start;
}
.userinfo {
  margin: 6px;
  height: 60px;
  display: flex;
  flex-direction: flex-start;
   justify-content: center;
  align-items: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 5rpx;
  border-radius: 50%;
}
.userinfo-text{
  display: flex;
  flex-direction: column;
  padding: 0 0 0 30px;
}
.userinfo-nickname {
  color: rgb(90, 85, 85);
  font-size: 15px;
}
.userinfo-desc {
  color: rgb(90, 85, 85);
  font-size: 15px;
}
.box {
  width: 100%;
  height: 180px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  flex-wrap: wrap;
  margin: 10% auto;
}
.boxitem {
  width: 180rpx;
  height: 180rpx;
  margin: 25rpx;
  background-color: white;
  border-radius: 25rpx;
  display: flex;
  flex-direction: column;
}
.boxitem_top {
  width: 70%;
  height: 70%;
  margin: 0 auto;
  display: flex;
  justify-content: center;
  align-items: center;
}
.boxitem_top image {
  width: 80%;
  height: 80%;
}
.boxitem_bottom {
  font-weight: 400;
  text-align: center;
}
.day_line{
  width: 1px;
  height: auto;
  background-color: #D8D8DC;
  position: relative;
  left: 30rpx;
  margin-left: 20rpx;
  margin-right: 30px;
}
.day_line::before{
  content: '';
  position: absolute;
  width: 12px;
  height: 11px;
  top: 0;
  left: -6px;
}
.day_type{
  width: 40rpx;
  height: 40rpx;
  font-size: 24rpx;
  color: #FFF;
  background-color: #3CB9FB;
  text-align: center;
  border-radius: 50%;
  position: absolute;
  left: -20rpx;
}
.day_wrap{
  width: 100%;
  height: 180px;
  color: #3CB9FB;
  font-size: 28rpx;
  padding-bottom: 30rpx;
}
.day_card{
  width: 80%;
  
  padding: 20rpx;
  margin-top: 20rpx;
  color: #878787;
  background-color: #FFF;
  border-radius: 10rpx;
}
.day_className{
  font-size: 32rpx;
  color: #333;
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
}
.day_course{
  margin-top: 10rpx; 
}